{
  "name": "sustainable-classroom-backend",
  "version": "1.0.0",
  "description": "Backend server for Sustainable Classroom e-learning platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:notify": "node tests/notification-db.test.js",
    "test": "jest --verbose --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "server.js",
      "notificationService.js"
    ],
    "testTimeout": 10000
  },
  "keywords": [
    "education",
    "elearning",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-mailjet": "^6.0.11",
    "nodemailer": "^7.0.12",
    "pg": "^8.11.3",
    "resend": "^6.7.0"
  },
  "devDependencies": {
    "better-sqlite3": "^12.6.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2"
  }
}
